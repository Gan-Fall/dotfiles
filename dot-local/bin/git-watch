#!/bin/bash

DIR_TABLE="$( echo $0 | sed s/git-watch/.git-watch-dirs/)"
START="$(pwd)"
touch "$DIR_TABLE"

if [ -z $1 ]; then

    while read p; do
        cd $p
        CMD_OUTPUT="$(git status -s)"
        if [ -n "$CMD_OUTPUT" ]; then
            echo "$p status:
            $CMD_OUTPUT"
        fi
    done <$DIR_TABLE
    cd $START

elif [ $1 = "add" ]; then

    echo "$(pwd)" >> $DIR_TABLE

elif [ $1 = "show" ]; then

    cat $DIR_TABLE

fi
